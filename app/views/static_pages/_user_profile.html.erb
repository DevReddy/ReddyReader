<div class="modal fade" id="profile_lightbox" tabindex="-1" role="dialog" aria-labelledby="profile_lightbox_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="profile_lightbox_label">profile</h4>
      </div>
      <div class="modal-body">
          <h1><%= current_user.username %></h1>
          Your WPM: <%= current_user.recent_wpm %>
          <div style="display:none" id="userbookdisplay">
          <%= render partial: "book_carousel", locals: { carousel_id: "user_books_carousel" } %>
          </div>
      </div>


    
    </div>
  </div>
</div>
