<p>Which book were you referring to?</p>

<% @books.each do |book| %>
  <div class="book">
    <img src="<%= book.image_url %>">
    <p><%= "#{book.title}" + ": " + "#{book.author}" + ": " + "#{book.page_count}" %></p>
  </div>
<% end %>

<div class="book">
  <% @search_results.each do |book| %>
    <img src="<%= book.image_url %>">
    <%= "#{book.title}" + ": " + "#{book.author}" + ": " + "#{book.page_count}" %>
  <% end %>
</div>
