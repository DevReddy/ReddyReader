<div class="modal fade" id="difficulty_modal" tabindex="-1" role="dialog" aria-labelledby="difficulty_modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="login_lightbox_label">Select Difficulty</h4>
        <div class="modal-body">
          <p>How difficult is this book?</p>
          <div class="row center">
            <input id="difficulty_slider" type="text" data-slider-min="1" data-slider-max="5" data-slider-step="1" data-slider-value="3">
          </div>
          <div class="row center">
            <button id="difficulty_done" class="btn btn-primary" >Done</button>
            <button id="difficulty_unknown" class="btn btn-warning" >I don't know</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
